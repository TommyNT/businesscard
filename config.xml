<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
		id          = "businesscard"
        version     = "1.0.1" >

    <name>Business Card Splashscreen</name>
    <description>My business card app with splashscreen</description>
    <author href="https://github.com/TommyNT" email="tommynt@outlook.com">
		Duong Nguyen Tuan
	</author>

	<icon src="res/solo.jpg" />

	<platform name="android" />
	
	<plugin name="cordova-plugin-device" spec="~1.1.4" />
	<plugin name="cordova-plugin-dialogs" spec="~1.3.1" />
	<plugin name="cordova-plugin-splashscreen" spec="~1.0.0" />

	<platform name="Android">
		<splash src="res/solo.jpg" density="port-hdpi"/>
	</platform>

	<preference name="SplashScreenDelay" value="10000" />

	</widget>